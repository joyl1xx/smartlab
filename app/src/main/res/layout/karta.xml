<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/some_id5"
            android:layout_width="240dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="52dp"
            android:textSize="22dp"
            android:text="Создание карты пациента"
            android:textColor="@color/black"
            android:textAppearance="@style/some_id"
            android:lineSpacingExtra="-1sp"
            android:gravity="top" />

        <TextView
            android:id="@+id/some_id3"
            android:layout_width="100dp"
            android:textSize="17dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_height="20dp"
            android:text="@string/some_id3"
            android:textAppearance="@style/some_id"
            android:lineSpacingExtra="2sp"
            android:translationY="-1.05sp"
            android:gravity="right|top" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="335dp"
        android:layout_height="20dp"
        android:layout_marginLeft="-370dp"
        android:layout_marginTop="120dp"
        app:srcCompat="@drawable/bez_karty" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-335dp"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/v_kartah" />

        <EditText
            android:id="@+id/editText12"
            android:layout_width="380dp"
            android:layout_height="48dp"
            android:background="@drawable/ugly"
            android:textColor="@color/grey"
            android:hint="Имя"
            android:padding="15dp"
            android:layout_marginLeft="-350dp"
            android:layout_marginTop="215dp"
            android:ems="20" />

        <EditText
            android:id="@+id/editText13"
            android:layout_width="380dp"
            android:layout_height="48dp"
            android:background="@drawable/ugly"
            android:textColor="@color/grey"
            android:hint="Отчество"
            android:padding="15dp"
            android:layout_marginLeft="-380dp"
            android:layout_marginTop="280dp"
            android:ems="20" />

        <EditText
            android:id="@+id/editText14"
            android:layout_width="380dp"
            android:layout_height="48dp"
            android:background="@drawable/ugly"
            android:textColor="@color/grey"
            android:hint="Фамилия"
            android:padding="15dp"
            android:layout_marginLeft="-380dp"
            android:layout_marginTop="345dp"
            android:ems="20" />

        <EditText
            android:id="@+id/editText15"
            android:layout_width="380dp"
            android:layout_height="48dp"
            android:background="@drawable/ugly"
            android:textColor="@color/grey"
            android:hint="Дата рождения"
            android:padding="15dp"
            android:layout_marginLeft="-380dp"
            android:layout_marginTop="410dp"
            android:ems="20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-400dp"
        android:layout_marginTop="475dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ugly">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="380dp"
            android:layout_height="48dp"
            android:background="@drawable/ugly"
            android:entries="@array/Female"
            android:padding="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ugly"/>
    <Button
        android:id="@+id/button"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="-400dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:background="@drawable/ugly"
        android:text="Создать" />
</LinearLayout>